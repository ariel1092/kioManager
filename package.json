{
  "name": "sistema-kiosco",
  "version": "1.0.0",
  "description": "Sistema integral de gestión para kiosco - Control de stock, ventas, ganancias, proveedores y mercadería vencida",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "backup": "node scripts/backup-database.js",
    "backup:custom": "node scripts/backup-database.js --output=",
    "restore": "node scripts/restore-database.js",
    "restore:custom": "node scripts/restore-database.js --file=",
    "create-user": "node scripts/crear-usuario-inicial.js",
    "create-user-dueno": "node scripts/crear-usuario-dueno.js",
    "create-user-empleado": "node scripts/crear-usuario-empleado.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "kiosco",
    "gestión",
    "stock",
    "ventas",
    "inventario"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "prisma": "^6.18.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
